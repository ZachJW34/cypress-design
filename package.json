{
  "name": "@cypress-design/design",
  "version": "0.0.0",
  "description": "Design system for the marketing site, app and cloud",
  "main": "index.js",
  "repository": "https://github.com/cypress-io/design-system.git",
  "author": "Bart Ledoux <ledouxb@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "components/*/react",
    "components/*/vue",
    "css",
    "storybook/*"
  ],
  "scripts": {
    "build": "yarn --cwd ./css build && yarn build:react && yarn build:vue && yarn build:intro",
    "build:intro": "yarn --cwd ./storybook/intro build",
    "build:react": "cd ./storybook/react && yarn build",
    "build:vue": "cd ./storybook/vue && yarn build",
    "start": "concurrently yarn:start:*",
    "start:intro": "yarn --cwd ./storybook/intro start",
    "start:react": "yarn --cwd ./storybook/react start --no-open",
    "start:vue": "yarn --cwd ./storybook/vue start --no-open",
    "build:css": "yarn workspace @cypress-design/css build",
    "postinstall": "yarn build:css"
  },
  "dependencies": {
    "@vue/tsconfig": "^0.1.3"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "prettier": "^2.6.2"
  }
}
